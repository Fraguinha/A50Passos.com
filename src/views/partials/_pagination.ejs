<% if (pages > 1) { %>
<% current = Number(current) %>
<% pages = Number(pages) %>
<% pagination = Number(pagination) %>
<div class="container">
  <ul class="pagination justify-content-center text-center">
    <% if (current == 0) { %>
    <li class="page-item disabled"><a class="page-link">Inicio</a></li>
    <% } else { %>
    <li class="page-item"><a class="page-link" href="<%= url %>/0">Inicio</a></li>
    <% } %>
    <% if (current > 0) { %>
    <li class="page-item">
      <a class="page-link" href="<%= url %>/<%= current - 1 %>">
        <span aria-hidden="true">&lt;</span>
      </a>
    </li>
    <% } else { %>
    <li class="page-item disabled">
      <a class="page-link">
        <span aria-hidden="true">&lt;</span>
      </a>
    </li>
    <% } %>
    <% let i = (current > Math.floor(pagination / 2) ? current - Math.floor(pagination / 2) : -1) %>
    <% if (i >= Math.floor(pagination / 2)) { %>
    <li class="page-item disabled"><a class="page-link">...</a></li>
    <% } %>
    <% let counter = 0 %>
    <% for (i = i + 1; (i <= (current + Math.ceil(pagination / 2)) || counter < pagination) && i <= pages; i++) { %>
    <% if (i - 1 == current) { %>
    <li class="page-item active">
      <a class="page-link text-white"><%= i %></a>
    </li>
    <% } else { %>
      <% if (i > 0) { %>
      <li class="page-item">
        <a class="page-link" href="<%= url %>/<%= i - 1 %>"><%= i %></a>
      </li>
      <% } %>
    <% } %>
    <% counter += 1 %>
    <% } %>
    <% if (i <= pages) { %>
    <li class="page-item disabled"><a class="page-link">...</a></li>
    <% } %>
    <% if (current < pages - 1) { %>
    <li class="page-item">
      <a class="page-link" href="<%= url %>/<%= current + 1 %>">
        <span aria-hidden="true">&gt;</span>
      </a>
    </li>
    <% } else { %>
    <li class="page-item disabled">
      <a class="page-link">
        <span aria-hidden="true">&gt;</span>
      </a>
    </li>
    <% } %>
    <% if (current == pages - 1) { %>
    <li class="page-item disabled"><a class="page-link">Fim</a></li>
    <% } else { %>
    <li class="page-item">
      <a class="page-link" href="<%= url %>/<%= pages - 1 %>">Fim</a>
    </li>
    <% } %>
  </ul>
</div>
<% } %>
