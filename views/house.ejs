<% if (house) { %>

<%- include("partials/_header.ejs") %>

<main role="main">
  <div class="bg-light">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators ">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
      </ol>
      <% if (house.available) { %>
      <div class="carousel-inner">
        <div class="carousel-item active text-center">
          <img class="img-fluid img-center" src="<%= house.photo1 %>" max-width="100%" height="auto">
        </div>
        <div class="carousel-item text-center">
          <img class="img-fluid img-center" src="<%= house.photo2 %>" max-width="100%" height="auto">
        </div>
        <div class="carousel-item text-center">
          <img class="img-fluid img-center" src="<%= house.photo3 %>" max-width="100%" height="auto">
        </div>
        <div class="carousel-item text-center">
          <img class="img-fluid img-center" src="<%= house.photo4 %>" max-width="100%" height="auto">
        </div>
      </div>
      <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <% } else { %>
    <div class="carousel-inner">
      <div class="carousel-item active text-center">
        <img class="img-fluid img-center" src="<%= house.photo1 %>" max-width="100%" height="auto">
        <div class="carousel-caption">
          <h1 class="display-1 text-white bg-danger">Já Foi!</h1>
        </div>
      </div>
      <div class="carousel-item text-center">
        <img class="img-fluid img-center" src="<%= house.photo2 %>" max-width="100%" height="auto">
        <div class="carousel-caption">
          <h1 class="display-1 text-white bg-danger">Já Foi!</h1>
        </div>
      </div>
      <div class="carousel-item text-center">
        <img class="img-fluid img-center" src="<%= house.photo3 %>" max-width="100%" height="auto">
        <div class="carousel-caption">
          <h1 class="display-1 text-white bg-danger">Já Foi!</h1>
        </div>
      </div>
      <div class="carousel-item text-center">
        <img class="img-fluid img-center" src="<%= house.photo4 %>" max-width="100%" height="auto">
        <div class="carousel-caption">
          <h1 class="display-1 text-white bg-danger">Já Foi!</h1>
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <% } %>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <% if (house.available) { %>
        <h1><%= house.title %></h1>
        <% } else { %>
        <h1><%= house.title %> <small class="text-danger">(Arrendado)</small></h1>
        <% } %>
        <h2 class="text-muted"><%= house.address %></h2>
        <hr>
      </div>
    </div>
    <div class="row">
      <div class="col-md-7">
        <h3>Localização</h3>
        <iframe width="100%" height="450" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCqjz4i7Y9I0CW2QWNmshmA7JFseTzzkgg
                        &q=<%= house.address %>&zoom=16" allowfullscreen>
        </iframe>
      </div>
      <div class="col-md-5">
        <h3>Descrição</h3>
        <p><%= house.description %></p>
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">Informação adicional</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Casas de banho</td>
              <td><%= house.wc %></td>
            </tr>
            <tr>
              <td>Suite</td>
              <% if (house.suite) { %>
              <td>Sim</td>
              <% } else { %>
              <td>Não</td>
              <% } %>
            </tr>
            <tr>
              <td>Elevador</td>
              <% if (house.elevator) { %>
              <td>Sim</td>
              <% } else { %>
              <td>Não</td>
              <% } %>
            </tr>
            <tr>
              <td>Sala de jantar</td>
              <% if (house.dinningroom) { %>
              <td>Sim</td>
              <% } else { %>
              <td>Não</td>
              <% } %>
            </tr>
            <tr>
              <td>Varanda</td>
              <% if (house.balcony) { %>
              <td>Sim</td>
              <% } else { %>
              <td>Não</td>
              <% } %>
            </tr>
            <tr>
              <td>Terraço</td>
              <% if (house.gardin) { %>
              <td>Sim</td>
              <% } else { %>
              <td>Não</td>
              <% } %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  </div>
</main>

<%- include("partials/_footer.ejs") %>

<%- include("partials/_toast.ejs") %>

<% } %>
