<% if (data) { %>

<%- include("partials/_header.ejs") %>

<main role="main">
  <div class="bg-light">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators ">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
      </ol>
      <% if (data.available) { %>
      <div class="carousel-inner">
        <div class="carousel-item active text-center">
          <img class="img-fluid img-center" src="<%= data.photo1 %>" max-width="100%" height="auto" />
        </div>
        <div class="carousel-item text-center">
          <img class="img-fluid img-center" src="<%= data.photo2 %>" max-width="100%" height="auto" />
        </div>
        <div class="carousel-item text-center">
          <img class="img-fluid img-center" src="<%= data.photo3 %>" max-width="100%" height="auto" />
        </div>
        <div class="carousel-item text-center">
          <img class="img-fluid img-center" src="<%= data.photo4 %>" max-width="100%" height="auto" />
        </div>
      </div>
      <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <% } else { %>
    <div class="carousel-inner">
      <div class="carousel-item active text-center">
        <img class="img-fluid img-center" src="<%= data.photo1 %>" max-width="100%" height="auto" />
        <div class="carousel-caption">
          <div class="banner-house">
            <h1 class="text-center text-white badge badge-house badge-danger gone-house">
              Já Foi!
            </h1>
          </div>
        </div>
      </div>
      <div class="carousel-item text-center">
        <img class="img-fluid img-center" src="<%= data.photo2 %>" max-width="100%" height="auto" />
        <div class="carousel-caption">
          <div class="banner-house">
            <h1 class="text-center text-white badge badge-house badge-danger gone-house">
              Já Foi!
            </h1>
          </div>
        </div>
      </div>
      <div class="carousel-item text-center">
        <img class="img-fluid img-center" src="<%= data.photo3 %>" max-width="100%" height="auto" />
        <div class="carousel-caption">
          <div class="banner-house">
            <h1 class="text-center text-white badge badge-house badge-danger gone-house">
              Já Foi!
            </h1>
          </div>
        </div>
      </div>
      <div class="carousel-item text-center">
        <img class="img-fluid img-center" src="<%= data.photo4 %>" max-width="100%" height="auto" />
        <div class="carousel-caption">
          <div class="banner-house">
            <h1 class="text-center text-white badge badge-house badge-danger gone-house">
              Já Foi!
            </h1>
          </div>
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <% } %>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <% if (data.available) { %>
        <h1>
          <%= data.title %>
          <small class="badge badge-success">Disponível</small>
        </h1>
        <% } else { %>
        <h1>
          <%= data.title %> <small class="badge badge-danger">Arrendado</small>
        </h1>
        <% } %>
        <h2 class="text-muted"><%= data.address %></h2>
        <hr />
      </div>
    </div>
    <div class="row">
      <div class="col-md-7">
        <h3>Localização</h3>
        <iframe width="100%" height="450" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCqjz4i7Y9I0CW2QWNmshmA7JFseTzzkgg
                        &q=<%= data.address %>&zoom=16" allowfullscreen>
        </iframe>
      </div>
      <div class="col-md-5">
        <h3>Descrição</h3>
        <p><%= data.description %></p>
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">Informação adicional</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Casas de banho</td>
              <td><%= data.wc %></td>
            </tr>
            <tr>
              <td>Suite</td>
              <% if (data.suite) { %>
              <td>Sim</td>
              <% } else { %>
              <td>Não</td>
              <% } %>
            </tr>
            <tr>
              <td>Elevador</td>
              <% if (data.elevator) { %>
              <td>Sim</td>
              <% } else { %>
              <td>Não</td>
              <% } %>
            </tr>
            <tr>
              <td>Sala de jantar</td>
              <% if (data.dinningroom) { %>
              <td>Sim</td>
              <% } else { %>
              <td>Não</td>
              <% } %>
            </tr>
            <tr>
              <td>Varanda</td>
              <% if (data.balcony) { %>
              <td>Sim</td>
              <% } else { %>
              <td>Não</td>
              <% } %>
            </tr>
            <tr>
              <td>Terraço</td>
              <% if (data.gardin) { %>
              <td>Sim</td>
              <% } else { %>
              <td>Não</td>
              <% } %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>

<%- include("partials/_footer.ejs") %>

<% if (data.available) { %>
<%- include("partials/_toast.ejs") %>
<% } %>
<% } %>
