<main>
    <div class="container">
        <!-- Logout -->
        <div class="row">
            <form class="form-signin" action="/login/logout" method="POST">
                <button class="btn btn-lg btn-danger btn-block" type="submit">Logout</button>
            </form>
        </div>
        <!-- Images -->
        <div class="row">
            <div class="col-md-3">
                <hr>
                <!-- Add photo 1 -->
                <form class="form-control-file" action="/dashboard/addPhoto1" method="POST"
                    enctype="multipart/form-data">
                    <h2 class="text-center">Upload foto 1</h2>
                    <hr>
                    <input type="file" name="photo1" multiple required>
                    <hr>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Upload foto</button>
                    <hr>
                    <img src="uploads/photo1.jpg" height="200" width="100%">
                </form>
            </div>
            <div class="col-md-3">
                <hr>
                <!-- Add photo 2 -->
                <form class="form-control-file" action="/dashboard/addPhoto2" method="POST"
                    enctype="multipart/form-data">
                    <h2 class="text-center">Upload foto 2</h2>
                    <hr>
                    <input type="file" name="photo2" multiple required>
                    <hr>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Upload foto</button>
                    <hr>
                    <img src="uploads/photo2.jpg" height="200" width="100%">
                </form>
            </div>
            <div class="col-md-3">
                <hr>
                <!-- Add photo 3 -->
                <form class="form-control-file" action="/dashboard/addPhoto3" method="POST"
                    enctype="multipart/form-data">
                    <h2 class="text-center">Upload foto 3</h2>
                    <hr>
                    <input type="file" name="photo3" multiple required>
                    <hr>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Upload foto</button>
                    <hr>
                    <img src="uploads/photo3.jpg" height="200" width="100%">
                </form>
            </div>
            <div class="col-md-3">
                <hr>
                <!-- Add photo 4 -->
                <form class="form-control-file" action="/dashboard/addPhoto4" method="POST"
                    enctype="multipart/form-data">
                    <h2 class="text-center">Upload foto 4</h2>
                    <hr>
                    <input type="file" name="photo4" multiple required>
                    <hr>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Upload foto</button>
                    <hr>
                    <img src="uploads/photo4.jpg" height="200" width="100%">
                </form>
            </div>
        </div>
        <!-- Clear -->
        <div class="row">
            <form class="form-signin" action="/dashboard/clearImages" method="POST">
                <button class="btn btn-lg btn-primary btn-block" type="submit">Clear</button>
            </form>
        </div>
        <hr>
        <!-- Fields -->
        <div class="row">
            <div class="col-md-4">
                <!-- Add house -->
                <form class="" action="/dashboard/addHouse" method="POST">
                    <h2 class="text-center">Adicionar casa</h2>
                    <hr>
                    <input name="id" type="text" class="form-control" placeholder="ID a adicionar (optional)">
                    <hr>
                    <input name="title" type="text" class="form-control" placeholder="Titulo" required>
                    <input name="address" type="text" class="form-control" placeholder="Morada" required>
                    <textarea name="description" type="text" class="form-control" placeholder="Descrição"
                        required></textarea>
                    <input name="tip" type="text" class="form-control" placeholder="Info" required>
                    <input name="wc" type="number" min="1" class="form-control" placeholder="Wc" required>
                    <hr>
                    <label for="suite">Suite:</label>
                    <input id="suite" name="suite" type="checkbox" class="form-control" value="suite">
                    <label for="elevator">Elevador:</label>
                    <input id="elevator" name="elevator" type="checkbox" class="form-control" value="suite">
                    <label for="dinningroom">Sala de jantar:</label>
                    <input id="dinningroom" name="dinningroom" type="checkbox" class="form-control" value="suite">
                    <label for="balcony">Varanda:</label>
                    <input id="balcony" name="balcony" type="checkbox" class="form-control" value="suite">
                    <label for="gardin">Jardim:</label>
                    <input id="gardin" name="gardin" type="checkbox" class="form-control" value="suite">
                    <hr>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Adicionar casa</button>
                </form>
            </div>
            <div class="col-md-4">
                <!-- Toggle house -->
                <form class="" action="/dashboard/toggleHouse" method="POST">
                    <h2 class="text-center">Toggle casa</h2>
                    <hr>
                    <input name="id" type="text" class="form-control" placeholder="ID a toggle" required>
                    <hr>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Toggle casa</button>
                </form>
                <hr>
                <form class="" action="/dashboard/removeHouse" method="POST">
                    <h2 class="text-center">Remover casa</h2>
                    <hr>
                    <input name="id" type="text" class="form-control" placeholder="ID a remover" required>
                    <hr>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Remover casa</button>
                </form>
            </div>
            <div class="col-md-4">
                <!-- Edit house -->
                <form class="" action="/dashboard/editHouse" method="POST">
                    <h2 class="text-center">Editar casa</h2>
                    <hr>
                    <input name="id" type="text" class="form-control" placeholder="ID a editar" required>
                    <hr>
                    <input name="title" type="text" class="form-control" placeholder="Titulo (optional)">
                    <input name="address" type="text" class="form-control" placeholder="Morada (optional)">
                    <textarea name="description" type="text" class="form-control"
                        placeholder="Descrição (optional)"></textarea>
                    <input name="tip" type="text" class="form-control" placeholder="Info (optional)">
                    <input id="wc" name="wc" type="number" min="1" class="form-control" placeholder="Wc">
                    <hr>
                    <label for="checkbox">Update checkboxes?</label>
                    <input id="checkbox" name="checkbox" type="checkbox" class="form-control">
                    <hr>
                    <label for="suite">Suite:</label>
                    <input id="suite" name="suite" type="checkbox" class="form-control">
                    <label for="elevator">Elevador:</label>
                    <input id="elevator" name="elevator" type="checkbox" class="form-control">
                    <label for="dinningroom">Sala de jantar:</label>
                    <input id="dinningroom" name="dinningroom" type="checkbox" class="form-control">
                    <label for="balcony">Varanda:</label>
                    <input id="balcony" name="balcony" type="checkbox" class="form-control">
                    <label for="gardin">Jardim:</label>
                    <input id="gardin" name="gardin" type="checkbox" class="form-control">
                    <hr>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Editar casa</button>
                </form>
            </div>
        </div>
        <hr>
    </div>
</main>
